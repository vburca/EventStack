<div class="main_title">
  <h1>Welcome to <span>Event</span>Stack</h1>
  <p>You finally found the easiest way of finding events at Trinity College.</p>
</div>

<div class="search-area">
  <!-- <form action="/events/search" id="search-form" class="custom show-search-options position-left"> -->
  <%= form_tag({:controller => :events, :action => :search}, :method => :get, :id => "search-form", 
                :class => "custom show-search-options position-left") do %>
    <div class="input-wrapper transparent">
      <!-- <input type="text" class="location" autocomplete="off" id="name" name="search_text" placeholder="Search events..."> -->
      <%= text_field_tag(:search_text, nil, { :placeholder => "Search events...", :class => "location", :id => "name" }) %>
    </div>
    <div class="input-wrapper" id="date-wraper">
      <!-- <input type="text" class="date search-option ui-datapicker-target" id="datepicker" name="date" placeholder="Date"> -->
      <%= text_field_tag(:date, nil, { :placeholder => "Date", :class => "date search-option ui-datapicker-target", :id => "datepicker" }) %>
      <span class="date-icon"></span>
    </div>

    <button type="submit" class="btn btn-search" id="submit-event">
      <i class="icon-search"></i>
        Search
    </button>
  <% end %>
  <!-- </form> -->
</div>
