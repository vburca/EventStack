<!DOCTYPE html>
<html>
<head>
  <title>EventStack</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div id="nav">
      <div id="title">
        <%= link_to root_path do %>
          EventStack
        <% end %>
      </div>

      <ul id="login">
        <% if user_signed_in? %>
          <li> Hi there, <%= link_to "#{current_user.first_name}", user_path(current_user.id) %> ! </li>
          <li> <%= link_to "Sign Out", destroy_user_session_path %> </li>
        <% else %>
          <li> <%= link_to "Come on in!", new_user_session_path %> </li>
          <li> <%= link_to "Want to join?", new_user_registration_path %> </li>
        <% end %>
      </ul>
    </div>

<%= yield %>

</body>
</html>
