<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h2 id="page_title"><%= @event.name %></h2>
<h3 id="event_creator_title"><span id="by_element">by</span> <%= @event.creator.username %></h3>

<span class="event_single_entry">
  <p>
    <b>Description:</b>
    <%= @event.description %>
  </p>

  <p>
    <b>Start datetime:</b>
    <%= @event.start_datetime %>
  </p>

  <p>
    <b>End datetime:</b>
    <%= @event.end_datetime %>
  </p>

  <p>
    <b>Location:</b>
    <%= @event.location %>
  </p>

  <p>
    <b>Food provided:</b>
    <%= @event.food_provided %>
  </p>

<% if current_user %>
  <% if current_user.admin? || (@event.creator.id == current_user.id) %>
     <% if (current_user and current_user.admin?) || moderate %>
                <%= link_to content_tag(:i, "", class: "icon-pencil icon-white"), edit_event_path(@event), class: 'btn remove_fields' %>
                <%= link_to content_tag(:i, "", class: "icon-trash icon-white"), @event, method: :delete, data: { confirm: 'Are you sure you want to delete this event?'}, class: 'btn btn-danger remove_fields' %>
            <% end %>
  <% end %>
<% end %>
<%= link_to 'Back', events_path, class: 'btn remove_fields' %>
